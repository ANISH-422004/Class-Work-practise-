<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ToDo</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <!-- Navbar -->
  <header class="bg-blue-600 text-white py-4">
    <div class="container mx-auto flex justify-between items-center px-4">
      <h1 class="text-2xl font-bold">Todo App</h1>
      <nav>
        <a href="/" class="px-4 py-2 hover:bg-blue-700 rounded">Home</a>
        <a href="/create-todo" class="px-4 py-2 hover:bg-blue-700 rounded">Create Todo</a>
      </nav>
    </div>
  </header>

  <!-- Todo List Section -->
  <section class="bg-white py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Your Todos</h2>
      <ul class="bg-gray-50 rounded shadow-md p-6">
        <% todos.forEach(todo => { %>
          <li class="flex justify-between items-center p-4 border-b">
            <span class="text-lg text-gray-800"><%= todo.text %></span>
            <% if (todo.completed) { %>
              <button class="bg-green-500 text-white px-4 py-1 rounded hover:bg-green-600">Active</button>
            <% } else { %>
              <button class="bg-yellow-500 text-white px-4 py-1 rounded hover:bg-yellow-600">Inactive</button>
            <% } %>
          </li>
        <% }) %>
      </ul>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-blue-600 text-white py-4">
    <div class="container mx-auto text-center px-4">
      <p>&copy; 2025 Todo App. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
