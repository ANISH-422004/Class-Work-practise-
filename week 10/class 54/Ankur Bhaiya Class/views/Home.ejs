<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="home.css">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class=" text-gray-800">

    <div class="container mx-auto p-8">
      <h1 class="text-4xl font-bold text-center mb-8 text-blue-600">HI, IT'S HOME</h1>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% data.forEach(e => { %>   
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-2xl transition">
            <h1 class="text-xl font-semibold mb-2 text-gray-700">
              Name: <span class="text-blue-500"><%= e.name %></span>
            </h1>
            <p class="text-lg text-gray-600">
              Age: <span class="text-green-500"><%= e.age %></span>
            </p>
          </div>
        <% }) %>
      </div>
    </div>

  </body>
</html>
