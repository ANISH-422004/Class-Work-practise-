<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Gallery</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-500 to-purple-600 min-h-screen flex flex-col items-center">
    
    <!-- Navbar -->
    <nav class="w-full bg-white p-4 shadow-md flex justify-between items-center">
        <h1 class="text-xl font-bold text-gray-800">Image Gallery</h1>
        <a href="javascript:history.back()" class="px-4 py-2 bg-blue-500 text-white rounded-md font-semibold hover:bg-blue-600 transition duration-300">
            Go Back
        </a>
    </nav>

    <!-- Image Gallery -->
    <div class="container mx-auto p-6">
        <h2 class="text-2xl font-bold text-white text-center mb-6">Uploaded Images</h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% files.forEach(file => { %>
                <div class="bg-white p-4 rounded-lg shadow-md">
                    <img class="w-full h-48 object-cover rounded-md" src="data:image/png;base64,<%= file.image.toString('base64') %>" alt="Uploaded Image">
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
