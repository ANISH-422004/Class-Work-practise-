<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Dummy Feed Page</title>
        <link
            href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
            rel="stylesheet"
        />
    </head>
    <body class="bg-gray-900 text-gray-100 font-sans m-0 p-0">
        <div
            class="header bg-green-600 text-white p-4 text-center shadow-lg flex justify-between items-center"
        >
            <h1 class="text-3xl font-bold">Dummy Feed Page</h1>
            <a
                href="/user/create-post"
                class="bg-white text-green-600 px-4 py-2 rounded hover:bg-gray-200"
                >New Post</a
            >
        </div>
        <div class="feed p-5 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
            <% posts.forEach(p=>{ %>
            <div
                class="post bg-gray-800 border border-green-500 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300"
            >
                <img
                    src="<%= p.image  %>"
                    alt="Post Image"
                    class="w-full h-48 object-cover rounded-t-lg"
                />
                <div class="p-5">
                    <p class="text-lg"><%= p.caption %></p>
                </div>
            </div>
            <% })%>
        </div>
    </body>
</html>
